<tr>
  <td>
  <div>
    <h4>Product: <%= product.name %></h4>
    <%= image_tag product.image.tiny %>
    <h5>Price: <%=humanized_money_with_symbol product.price%></h5>
    <h5>Description: <%=product.description %></h5>
    <h5>Quantity: <%=quantity%> 
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>

    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
  </div>
  </td>
</tr>
 